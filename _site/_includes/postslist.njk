<ol reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
  {% for post in postslist | reverse %}
    {% set currentPost = post.data.post %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title | safe }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </a>
      {% if post.data.category %}
        <b>{{ post.data.category }}</b>
      {% endif %}
      <time class="postlist-date" datetime="{{ post.data.publishedAt }}">{{ post.data.publishedAt | simpleDate }}</time>
    </li>
  {% endfor %}
</ol>